<% include ../partials/header%>
<div class="container">
<div class="row">
   <h1 style="text-align: center">Edit <%=cg.name%></h1>

<div style="width: 50% ; margin : 30px auto;">
<form action="/campgrounds/<%=cg._id%>?_method=PUT" method="POST">
  <div class="form-group">
  <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%=cg.name%>">
  </div>
  <div class="form-group">
  <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%=cg.image%>">
  </div>
  <div class="form-group">
  <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%=cg.description%>">
  </div>

  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit!">
 
</form>
<a href="/campgrounds">Go Back</a>
</div>

</div>
</div>
<% include ../partials/footer%>